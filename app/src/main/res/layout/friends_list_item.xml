<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@android:color/white"
    android:padding="@dimen/list_item_padding">

    <ImageView
        android:id="@+id/list_item_profile_picture"
        android:layout_width="@dimen/list_item_content"
        android:layout_height="@dimen/list_item_content"
        android:layout_marginLeft="@dimen/list_item_picture_margin"
        android:contentDescription="@string/profile_picture_content_description"/>

    <TextView
        android:id="@+id/list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_content"
        android:layout_marginLeft="@dimen/list_item_text_margin"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="@dimen/list_item_text"/>

</RelativeLayout>