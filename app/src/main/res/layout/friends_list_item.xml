<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/primary_dark"
    android:padding="@dimen/list_item_padding">

    <ImageView
        android:layout_width="@dimen/list_item_content"
        android:layout_height="@dimen/list_item_content"
        android:layout_marginLeft="@dimen/list_item_content_margin"
        android:background="@drawable/default_profile_picture"
        android:contentDescription="@string/profile_picture_content_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_item_content"
        android:layout_marginLeft="@dimen/list_item_content_margin"
        android:gravity="center"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/list_item_text"/>

</LinearLayout>